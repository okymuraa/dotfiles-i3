#############################################################
##########SERVICIOS##########
#servicios que no se inician
exec --no-startup-id killall xfwm4
exec --no-startup-id killall xfce4-panel

#compositor picom
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf

#remplaza las configuraciones de xfce
exec --no-startup-id xfsettingsd --replace

#exec --no-startup-id xfce4-panel

#para las notificaciones
exec --no-startup-id xfce4-notifyd

#iniciar xbindkeys para botones del mouse
exec --no-startup-id xbindkeys

# NetworkManager applet para gestionar redes
exec --no-startup-id nm-applet


# Iniciar la polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

#####################################################################
##########CONFIGURACIONES DEL SISTEMA##########
#CONFIGURACION BASE
set $mod Mod4
font pango:Inter 12

gaps inner 10
gaps outer 5

floating_modifier $mod
tiling_drag modifier titlebar

# COLORES DE VENTANAS
# class                 bordes  fondo   texto   indicador borde pequeño
client.focused          #10232e #10232e #282a36 #10232e   #10232e  #Borde de la pantalla
client.focused_inactive #44475a #44475a #ffffff #44475a   #44475a
client.unfocused        #282a36 #282a36 #888888 #282a36   #282a36
client.urgent           #ff5555 #ff5555 #ffffff #ff5555   #ff5555
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff


default_border pixel 3
default_floating_border pixel 3

######################################################################
#ATAJOS
bindsym $mod+Return exec --no-startup-id xfc4-terminal   #terminal
bindsym $mod+space exec --no-startup-id rofi -no-lazy-grab -show-icons -show drun
bindsym $mod+q kill

# mover foco
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

#bindsym $mod+Left focus left
#bindsym $mod+Down focus down
#bindsym $mod+Up focus up
#bindsym $mod+Right focus right

# mover ventanas
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+f fullscreen toggle
bindsym $mod+v floating toggle
bindsym $mod+a focus parent

# apagado
bindsym $mod+Shift+q exec ~/.local/bin/powermenu.sh

# Control de volumen con teclas multimedia
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle


##################################################################### 
##########KEYBINDS##########
#mover a workspace derecha
bindsym $mod+Left workspace prev
bindsym $mod+Right workspace next

# Navegar entre workspaces recientes
bindsym $mod+Tab workspace back_and_forth

# Ir al workspace anterior/siguiente en el mismo monitor
bindsym $mod+Control+Left workspace prev_on_output
bindsym $mod+Control+Right workspace next_on_output

##################################################################### 
#WORKSPACES
# Definir monitores
set $monitor1 eDP-1
set $monitor2 HDMI-1-1

# Laptop (eDP-1) - Workspaces 1 a 5
workspace 1 output $monitor1
workspace 2 output $monitor1
workspace 3 output $monitor1
workspace 4 output $monitor1
workspace 5 output $monitor1

# Monitor externo (HDMI-1-1) - Workspaces 6 a 10
workspace 6 output $monitor2
workspace 7 output $monitor2
workspace 8 output $monitor2
workspace 9 output $monitor2
workspace 10 output $monitor2

# Definir variables de workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Atajos para cambiar a workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Mover ventanas a workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Comandos de i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-msg exit"

# Modo resize
mode "resize" {
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow   height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow width 10 px or 10 ppt

    bindsym Left  resize shrink width 10 px or 10 ppt
    bindsym Down  resize grow   height 10 px or 10 ppt
    bindsym Up    resize shrink height 10 px or 10 ppt
    bindsym Right resize grow   width 0 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Ventanas flotantes por aplicación
for_window [class="Pavucontrol"] floating enable
for_window [class="Blueman-manager"] floating enable
for_window [class="Nm-connection-editor"] floating enable
for_window [title="Picture-in-Picture"] floating enable sticky enable

# Centrar ventanas flotantes
for_window [floating] move position center

# Atajo para toggle flotante
bindsym $mod+t floating toggle

# Cambiar foco entre flotante/tiling
bindsym $mod+Shift+space focus mode_toggle

# Mover ventanas flotantes con mouse
floating_modifier $mod

# Tamaño específico para ventanas flotantes
for_window [class="calculator"] floating enable resize set 400 500

