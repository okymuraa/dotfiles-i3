[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 28
radius = 0
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
border-size = 0
padding = 2
module-margin = 1

; IMPORTANTE: Configurar las fuentes con Nerd Fonts
font-0 = JetBrainsMono Nerd Font:size=10;3
font-1 = JetBrainsMono Nerd Font:size=16;4
font-2 = Symbols Nerd Font:size=14;3

modules-left = i3 xwindow spotify
modules-center = date
modules-right = bluetooth network battery pulseaudio cpu memory powermenu

; Integración con i3
wm-restack = i3
override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Solo mostrar workspaces del monitor actual
pin-workspaces = true

; Iconos pegados directamente (cópialos desde https://www.nerdfonts.com/cheat-sheet)
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-default = 

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.alert}

label-focused = %icon% %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-unfocused = %icon% %name%
label-unfocused-padding = 2

label-visible = %icon% %name%
label-visible-background = ${colors.background-alt}
label-visible-padding = 2

label-urgent = %icon% %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d%
time = %H:%M:%S

; Pega los iconos directamente aquí
label =  %date%   %time%

[module/spotify]
type = custom/script
interval = 2
format = <label>
exec = ~/.config/polybar/scripts/spotify.sh
click-left = playerctl --player=spotify play-pause
click-right = playerctl --player=spotify next
click-middle = playerctl --player=spotify previous


[module/bluetooth]
type = custom/script
exec = ~/.local/bin/rofi-bluetooth --status
interval = 1
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.primary}
click-left = ~/.local/bin/rofi-bluetooth &


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

label-muted =   muted
label-muted-foreground = ${colors.alert}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage_used%%

[module/network]
type = internal/network
; CAMBIA ESTO: pon tu interfaz WiFi (wlan0, wlp3s0, etc)
interface = wlp0s20f3
interface-type = wireless
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid% %downspeed%
label-connected-foreground = ${colors.primary}


; PEGA AQUÍ EL ICONO DE DESCONECTADO →
label-disconnected = 󰖪 Sin conexión
label-disconnected-foreground = ${colors.alert}
click-left = bash /home/okymuraa/.config/polybar/scripts/rofi-wifi-menu.sh &


; PEGA AQUÍ LOS ICONOS DE SEÑAL WiFi →
ramp-signal-0 = 󰤟
ramp-signal-1 = 󰤢
ramp-signal-2 = 󰤥
ramp-signal-3 = 󰤨
ramp-signal-foreground = ${colors.primary}


[module/battery]
type = internal/battery
; CAMBIA ESTO según tu sistema (BAT0, BAT1, BAT, etc)
battery = BAT0
adapter = ADP1
full-at = 98
low-at = 15
poll-interval = 5

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-low = <animation-low> <label-low>

label-charging = %percentage%%
label-charging-foreground = ${colors.primary}
label-discharging = %percentage%%
label-full = %percentage%%
label-low = %percentage%%
label-low-foreground = ${colors.alert}

; PEGA AQUÍ LOS ICONOS DE BATERÍA (descargando) →
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; PEGA AQUÍ LOS ICONOS DE BATERÍA (cargando) →
animation-charging-0 = 󰂆
animation-charging-1 = 󰂈
animation-charging-2 = 󰂉
animation-charging-3 = 󰂊
animation-charging-4 = 󱊦
animation-charging-foreground = ${colors.primary}
animation-charging-framerate = 750

; PEGA AQUÍ LOS ICONOS DE BATERÍA BAJA (animación) →
animation-low-0 = 󱃍
